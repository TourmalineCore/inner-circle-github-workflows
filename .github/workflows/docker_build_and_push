name: Publish Docker Image

on:
  workflow_call:
    inputs:
      # Build-args used to define variables that will be used in image
      # Example of build-args: "|
                          #CDN_ENABLED=true
                          #CDN_DOMAIN=cdn.domain.com"
      build-args:
        required: false
        type: string
      # Prefix used to be able to build images for local-env and prod-env with different tags
      # prefix is also used to write current env to digest name to be able to build several docker images for several envs in one workflow
      # Example of prefix: local-env
      prefix:
        required: false
        type: string

jobs:
  build_amd64:
    uses: ./.github/workflows/docker_digest_build_and_push.yml
    with:
      inputs:
        platform: amd64
        build-args: ${{ inputs.build-args }}
        prefix: ${{ inputs.prefix }}
    # without this it cannot login to the registry
    secrets: inherit

jobs:
  build_arm64:
    uses: ./.github/workflows/docker_digest_build_and_push.yml
    with:
      inputs:
        platform: arm64
        build-args: ${{ inputs.build-args }}
        prefix: ${{ inputs.prefix }}  
  # without this it cannot login to the registry
    secrets: inherit

  merge:
    runs-on: ubuntu-22.04
    needs:
      - build_amd64
      - build_arm64
    steps:
      - name: Prepare
        run: |
          repository_lower=$(echo "${{ github.repository }}" | tr '[:upper:]' '[:lower:]')

          echo "repository=$repository_lower" >> $GITHUB_ENV

      - name: Download digests
        uses: actions/download-artifact@v4
        with:
          path: ${{ runner.temp }}/digests
          # Prefix is needed to explicitly split digests by it's environment and download digests only for current environment
          # and avoid using local env image in prod
          # Example of digest name: local-env-digests-linux-amd64
          pattern: ${{ inputs.prefix && format('{0}-', inputs.prefix) || '' }}digests-*
          merge-multiple: true

      - name: Log in to GitHub Container Registry
        uses: docker/login-action@f4ef78c080cd8ba55a85445d5b36e214a81df20a
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Extract metadata (tags, labels) for Docker
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: ghcr.io/${{ env.repository }}
          tags: |
            type=raw,value=${{ inputs.prefix && format('{0}-', inputs.prefix) || '' }}latest,enable=${{ github.ref == format('refs/heads/{0}', github.event.repository.default_branch) }}
            type=sha,prefix=${{ inputs.prefix && format('{0}-', inputs.prefix) || '' }}sha-
            type=sha,format=long,prefix=${{ inputs.prefix && format('{0}-', inputs.prefix) || '' }}sha-

      - name: Create manifest list and push
        working-directory: ${{ runner.temp }}/digests
        run: |
          docker buildx imagetools create $(jq -cr '.tags | map("-t " + .) | join(" ")' <<< "$DOCKER_METADATA_OUTPUT_JSON") \
            $(printf 'ghcr.io/${{ env.repository }}@sha256:%s ' *)

      - name: Inspect image
        run: |
          docker buildx imagetools inspect ghcr.io/${{ env.repository }}:${{ steps.meta.outputs.version }}